<h1>Student Form</h1>

<% if @student.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being created:</h2>
    <ul>
    <% @student.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @student  do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "Name" %><br>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, placeholder: "Street", class: 'form-control exam_forms' %>
  </div>

  <div class="form-group">
    <%= f.label :contact_no %><br>
    <%= f.text_field :contact_no, class: 'form-control', class: 'form-control exam_forms' %>
  </div>

  <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control exam_forms' %>
  </div>

  <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, class: 'form-control exam_forms' %>
  </div>

  <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation, class: 'form-control exam_forms' %>
  </div>

  <div class="form-group">
      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control exam_forms' %>
  </div>

  <div class="form-group">
      <%= f.label :terms_and_conditions %>
      <%= f.check_box :terms_and_conditions, class: 'form-control exam_forms' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: 'checkout-btn' %> 
  </div>
<% end %>
